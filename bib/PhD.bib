isbn = {0016-6731 (Print)},
issn = {00166731},
journal = {Genetics},
number = {3},
pages = {1657--1680},
pmid = {18622036},
title = {{Chromosomal rearrangement inferred from comparisons of 12 drosophila genomes}},
volume = {179},
year = {2008}
}
