issn = {15495469},
journal = {Genome Research},
keywords = {dnase-seq,nucid,nucleosome mapping,nucleosome positioning},
number = {3},
pages = {351--364},
pmid = {26772197},
title = {{Mapping nucleosome positions using DNase-seq}},
volume = {26},
