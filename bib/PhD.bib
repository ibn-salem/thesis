journal = {BMC genomics},
keywords = {Small-scale duplication,Whole-genome duplication,F,disease,evolutionary rate,functional divergence,gene essentiality,genes,protein multifunctionality,small-scale duplication,whole-genome duplication},
number = {1},
pages = {71},
pmid = {26801093},
