issn = {09609822},
journal = {Current Biology},
keywords = {development,enhancer,redundancy,robustness,shadow enhancer,transcriptional networks},
number = {1},
pages = {38--51},
pmid = {26687625},
title = {{Shadow Enhancers Are Pervasive Features of Developmental Regulatory Networks}},
