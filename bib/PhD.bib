file = {:home/ibnsalem/Mendeley/Rodin, Parkhomchuk - 2004 - Position-associated GC asymmetry of gene duplicates(2).pdf:pdf},
isbn = {0022-2844 (Print)$\backslash$n0022-2844 (Linking)},
